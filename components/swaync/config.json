{
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "notification-window-width": 350,
  "timeout": 6,
  "timeout-low": 3,
  "timeout-critical": 3,
  "notification-icon-size": 34,
  "notification-body-image-height": 300,
  "notification-body-image-width": 300,
  "control-center-layer": "top",
  "control-center-width": 330,
  "control-center-height": 900,
  "control-center-margin-top": 5,
  "control-center-margin-bottom": 5,
  "control-center-margin-right": 8,
  "control-center-margin-left": 0,
  "widgets": ["dnd", "buttons-grid", "mpris", "title", "notifications"],
  "widget-config": {
    "title": {
      "text": " Notifications",
      "clear-all-button": true,
      "button-text": " Clear"
    },
    "volume": {
      "label": "󰕾",
      "show-per-app": true
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "mpris": {
      "image-size": 60,
      "image-radius": 12,
      "blur": true,
      "show-player": "all",
      "show-when-paused": true
    }
  },
  "buttons-grid": {
    "actions": [
      {
        "label": " Terminal",
        "command": "kitty"
      },
      {
        "label": " File Manager",
        "command": "nautilus"
      },
      {
        "label": " Browser",
        "command": "firefox"
      },
      {
        "label": "󰒲 System Monitor",
        "command": "gnome-system-monitor"
      }
    ]
  }
}
